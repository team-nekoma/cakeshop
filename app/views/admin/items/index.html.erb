<div>
  <%= flash[:notice] %>
</div>
<div class="container">
  <div class="row">
    <h2>商品一覧</h2>
      <table class="table">
        <thead>
          <tr>
            <th>商品ID</th>
            <th>商品名</th>
            <th>税抜価格</th>
            <th>ステータス</th>
          </tr>
        </thead>

        <tbody>
          <% @items.each do |item| %>
           <tr>
            <td><%= item.id %></td>
            <td><%= link_to item.name, admin_item_path(item) %></td>
            <td><%= item.price.to_s(:delimited) %></td>
            <td>
              <% if item.is_active %>
               販売中
               <% else %>
               販売停止中
              <% end %>
            </td>
           </tr>
          <% end %>
        </tbody>
      </table>

      <%= paginate @items %>
  </div>
</div>



