
<!DOCTYPE html>
<html>
  <head>
    <title>Cakeshop</title>
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <script src="https://kit.fontawesome.com/6781c6f16f.js" crossorigin="anonymous"></script>
    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
  </head>

  <body class="d-flex flex-column vh-100">
    <header>
      <nav class="navbar navbar-expand-lg navbar-dark ">
        <div class="container">
          <a class="navbar-brand p-3" href="/"><%= image_tag('IMG-7763.jpg', size: "200x100") %></a>
          <ul class="navbar-nav ml-auto ">
            <% if admin_signed_in? %>
              <%# if request.fullpath.include? "/admin" %>
                <li class="nav-item">
                  <div type="button" class="btn btn-outline-primary btn-custom">
                    <%= link_to "商品一覧", admin_items_path %>
                  </div>
                </li>
                <li class="nav-item">
                  <div type="button" class="btn btn-outline-primary btn-custom">
                    <%= link_to "会員一覧", admin_customers_path %>
                  </div>
                </li>
                <li class="nav-item">
                  <div type="button" class="btn btn-outline-primary btn-custom">
                    <%= link_to "注文履歴一覧", admin_path %>
                  </div>
                </li>
                <li class="nav-item">
                  <div type="button" class="btn btn-outline-primary btn-custom">
                    <%= link_to "ジャンル一覧", admin_genres_path %>
                  </div>
                </li>
                <li class="nav-item">
                  <div type="button" class="btn btn-outline-primary btn-custom">
                    <%= link_to "ログアウト", destroy_admin_session_path, method: :delete %>
                  </div>
                </li>
              <%# else %>
              <%# end %>
            <% elsif customer_signed_in? %>
                <li class="nav-item">
                  <div type="button" class="btn btn-outline-primary btn-custom">
                    <%= link_to "マイページ", customer_session_path %>
                  </div>
                </li>
                <li class="nav-item">
                  <div type="button" class="btn btn-outline-primary btn-custom">
                    <%= link_to "商品一覧", items_path %>
                  </div>
                </li>
                <li class="nav-item">
                  <div type="button" class="btn btn-outline-primary btn-custom">
                    <%= link_to "カート", cart_items_path %>
                  </div>
                </li>
                <li class="nav-item">
                  <div type="button" class="btn btn-outline-primary btn-custom">
                    <%= link_to "ログアウト", destroy_customer_session_path, method: :delete %>
                  </div>
                </li>
              <% else %>
                <li class="nav-item">
                  <div type="button" class="btn btn-outline-primary btn-custom">
                    <%= link_to "About", about_path %>
                  </div>
                </li>
                <li class="nav-item">
                  <div type="button" class="btn btn-outline-primary btn-custom">
                    <%= link_to "商品一覧", items_path %>
                  </div>
                </li>
                <li class="nav-item">
                  <div type="button" class="btn btn-outline-primary btn-custom">
                    <%= link_to "新規登録", new_customer_registration_path %>
                  </div>
                </li>
                <li class="nav-item">
                  <div type="button" class="btn btn-outline-primary btn-custom">
                    <%= link_to "ログイン", new_customer_session_path %>
                  </div>
                </li>
            <% end %>
          </ul>
        </div>
      </nav>
      <hr class="decorative-line">
    </header>
    
    <%= yield %>
    <footer>
    <hr class="decorative-line">
    </footer>
  </body>
</html>
