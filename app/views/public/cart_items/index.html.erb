<h2>ショッピングカート</h2>

<% @cart_items.each do |cart_item| %>
  <p>商品名: <%= cart_item.item.name %></p>
  <p>単価（税込）: <%= cart_item.item.price_including_tax %></p>  
  <p>数量: <%= cart_item.quantity %></p>
  <p>小計: <%= cart_item.item.price_including_tax * cart_item.quantity %></p> 
  <%= link_to 'Delete', cart_item_path(cart_item), method: :delete, data: { confirm: 'Are you sure?' } %>
<% end %>
