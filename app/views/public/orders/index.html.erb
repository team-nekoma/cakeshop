<div class="container">
  <div class="row">
    <h2>注文一覧画面</h2>
    <table class="table table-bordered ">
      <% @order.each do |order| %>
      <tr>
        <th>注文日</th>
        <th>配送先</th>
        <th>注文商品</th>
        <th>支払金額</th>
        <th>ステータス</th>
        <th>注文詳細</th>
      </tr>
      <tr>
        <td><%= order.created_at.strftime('%Y/%m/%d') %></td>
        <td>〒<%= order.postcode %>&nbsp;<%= order.address %><br><%= order.name %></td>
          <td>
            <% order.order_datails.each do |order_datail| %>
            <%= order_datail.item.name %><br>
            <% end %>
          </td>
          <td><%= @order_datail.buy_price %></td>
        <td><%= order.order_status %></td>
        <td><%= link_to "表示する", order_path(order), class: "btn btn-primary" %></td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
