<div class="container">
  <div class="row">
  <h2>注文履歴詳細</h2>
    <div class="col-md-9">
      <strong>注文情報</strong>
      <table class="table table-bordered ">
        <tr>
          <th>注文日</th>
          <td><%= @order.created_at.strftime('%Y/%m/%d') %></td>
        </tr>
        <tr>
          <th>配送先</th>
          <td>〒<%= @order.postcode %>&nbsp;<%= @order.address %><br><%= @order.name %></td>
        </tr>
        <tr>
          <th>支払方法</th>
          <td><%= t("enums.order.payment.#{@order.payment}") %></td>
        </tr>
        <tr>
          <th>ステータス</th>
          <td><%= @order.order_status %></td>
        </tr>
      </table>
    </div>
    <div class="col-md-3">
      <strong>請求情報</strong>
        <table class="table table-bordered ">
          <tr>
            <th>商品合計</th>
            <td><%= @total %></td>
          </tr>
          <tr>
            <th>配送料</th>
            <td><%= @shiptotal %></td>
          </tr>
          <tr>
            <th>ご請求額</th>
            <td></td>
          </tr>
        </table>
    </div>
  </div>
  <div class="row">
    <strong>注文内容</strong>
    <% @order_datails.each do |order_datail| %>
    <table class="table table-bordered ">
      <tr>
        <th>商品</th>
        <th>単価（税込）</th>
        <th>個数</th>
        <th>小計</th>
      </tr>
      <tr>
        <td><%= order_datail.item.name %></td>
        <td><%= order_datail.item.price_including_tax %></td>
        <td><%= order_datail.quantity %></td>
        <td><%= order_datail.item.price_including_tax * order_datail.quantity %></td>
      </tr>
    </table>
    <% end %>
  </div>
</div>





<h4>注文内容</h4>
<% @order_datails.each do |order_datail| %>
<%= order_datail.item.name %>
<%= order_datail.item.price_including_tax %>
<%= order_datail.quantity %>
<%= order_datail.item.price_including_tax * order_datail.quantity %>
<% end %>
