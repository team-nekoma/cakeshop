<% if @items.present? %>
<h2>商品一覧（全<%= @items.count %>件）</h2>
<div class="row">
    <div class="col-sm-3">
      <div style="padding: 10px; background-color: #ffffff;">
        <% @items.each do |item| %>
          <% if item.genre.is_active == true %>
            <%= link_to item_path(item.id) do %>
             <img style="width: 200px; height: 170px; object-fit: contain; margin-bottom: 10px;" src="<%= url_for(item.image) %>">
          <% end %>
          <h5 style="margin: 0; padding: 0;"><%= item.name %></h5>
          <p style="margin: 0; padding: 0;">¥<%= number_with_delimiter(item.price) %></p>
        <% end %>
        <% else %>
          <tr>
            <td>アイテムが見つかりませんでした。</td>
          </tr>
      </div>
    </div>
<% end %>